<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data></data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <include
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/layout_header_normal"
            />
        <ImageView
            android:id="@+id/image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@mipmap/bill_refund"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type"
            android:layout_marginTop="8dp"
            android:text=""
            style="@style/text12"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/money"
            style="@style/text16_bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text=""
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/view"
            android:layout_marginTop="20dp"
            android:background="@color/divider_line"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/line"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账单类型"
                style="@style/text14"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款"
                android:layout_alignParentEnd="true"
                style="@style/text14"
                />
            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款进度"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/t1"
                style="@style/text14"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t2"
                android:layout_marginTop="10dp"
                android:paddingTop="15dp"
                android:background="#F7F8FA"
                android:paddingLeft="15dp"
                android:paddingBottom="30dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/apply"
                    android:text="退款申请"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:drawableLeft="@mipmap/icon_success"
                    android:drawablePadding="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time1"
                    android:layout_below="@+id/apply"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@+id/line1"
                    android:layout_marginLeft="11dp"
                    android:text=""
                    style="@style/text12_gray"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/content1"
                    android:layout_below="@+id/time1"
                    android:layout_alignLeft="@+id/time1"
                    android:layout_marginTop="3dp"
                    android:text=""
                    style="@style/text12_real"
                    />
                <View
                    android:layout_width="2dp"
                    android:layout_height="80dp"
                    android:background="@color/text_color"
                    android:layout_below="@+id/apply"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/line1"
                    android:layout_marginTop="3dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/result"
                    android:text="退款失败"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:drawableLeft="@mipmap/icon_success"
                    android:drawablePadding="5dp"
                    android:layout_below="@+id/line1"
                    android:layout_marginTop="3dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time2"
                    android:layout_below="@+id/result"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/line1"
                    android:layout_marginLeft="11dp"
                    android:text=""
                    style="@style/text12_gray"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/content2"
                    android:layout_below="@+id/time2"
                    android:layout_alignLeft="@+id/time1"
                    android:layout_marginTop="3dp"
                    android:text=""
                    style="@style/text12_real"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>