<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:src="@mipmap/icon_close" />

        <TextView
            android:id="@+id/img_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/et_code"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/shape_textcolor"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/img_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/img_login"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/textcolor_corner"
            android:gravity="center"
            android:text="新用户注册"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/tv_title"
            android:layout_width="169dp"
            android:layout_height="40dp"
            android:layout_below="@+id/img_close"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="52dp"
            android:src="@mipmap/logo_kulun" />

        <TextView
            android:id="@+id/tv_sms_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_phone"
            android:layout_alignRight="@+id/et_phone"
            android:layout_marginTop="35dp"
            android:background="@drawable/get_sms"
            android:gravity="center"
            android:text="获取短信验证码"
            android:textColor="@color/white"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_login_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_register"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="账号密码登录"
            android:textColor="@color/black" />

        <com.kulun.energynet.customizeView.ClearEditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/et_phone"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_sms_receive"
            android:background="@drawable/et_back"
            android:drawableRight="@drawable/delete_selector"
            android:drawablePadding="5dp"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#999999"
            android:textSize="14sp" />

        <com.kulun.energynet.customizeView.ClearEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/et_back"
            android:drawableRight="@drawable/delete_selector"
            android:drawablePadding="5dp"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#999999"
            android:textSize="14sp" />

    </RelativeLayout>

    <data></data>
</layout>
