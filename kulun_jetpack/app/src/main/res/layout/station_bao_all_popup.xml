<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >

            <RelativeLayout
                android:id="@+id/re_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:paddingTop="18dp"
                android:paddingBottom="13dp">


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:text="西斗门"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/text14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_below="@id/tv_name"
                    android:text="创业园内"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableTop="@mipmap/station_record_guide"
                    android:gravity="center"
                    android:text="导航\n 4.00km"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/text14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_address"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@mipmap/station_icon_phone"
                    android:drawablePadding="5dp"
                    android:text="15209603592"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_fare_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_address"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/tv_phone"
                    android:background="@drawable/shape_gray_parker"
                    android:paddingLeft="4dp"
                    android:paddingTop="3dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="3dp"
                    android:text="停车费10元/小时"
                    android:textColor="@color/list_gray"
                    android:textSize="11sp"
                    android:layout_marginLeft="13dp"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/re_all"
                android:background="@color/divider_line2"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/re_station"
                android:layout_below="@+id/re_all"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                >

                <TextView
                    android:id="@+id/tv_name_zhan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:text="西斗门"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name_zhan"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sign_zhan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="4dp"
                        android:paddingTop="3dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="3dp"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_clock_zhan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:paddingTop="3dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="3dp"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_paidui_zhan"
                    style="@style/text14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/l1"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/tv_kucun_zhan"
                    style="@style/text14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/l1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/tv_paidui_zhan"
                    android:textColor="@color/text_color" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/re_station"
                android:id="@+id/view2"
                android:background="@color/divider_line"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/re_station_bao"
                android:layout_below="@+id/view2"
                android:layout_marginTop="0.5dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                >

                <TextView
                    android:id="@+id/tv_name_bao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/l1_bao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name_bao"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sign_bao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="4dp"
                        android:paddingTop="3dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="3dp"
                        android:text="可预约"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_clock_bao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:paddingTop="3dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="3dp"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_yue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/shape_textcolor_17"
                    android:gravity="center"
                    android:paddingLeft="11dp"
                    android:paddingTop="7dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="7dp"
                    android:text="立即预约"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_dianchi_bao"
                    style="@style/text14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/l1_bao"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>