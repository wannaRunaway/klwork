<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="18dp"
            android:paddingTop="12dp"
            android:paddingRight="30dp"
            android:paddingBottom="12dp"
            android:src="@mipmap/icon_close" />

        <TextView
            android:id="@+id/evaluate_top_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="评价"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_back"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingTop="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/evaluate_serial_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center|left"
                android:text="订单号："
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/evaluate_station"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|right"
                android:text="吴东路站"
                android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_line"
            android:layout_marginTop="15dp"
            >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center">
                <TextView
                    android:id="@+id/evaluate_star1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/star2"
                    />
                <TextView
                    android:id="@+id/evaluate_star2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/star2"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/evaluate_star3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/star2"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/evaluate_star4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/star2"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/evaluate_star5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/star2"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/evaluate_star_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="请对服务进行评价"
                android:textSize="14dp"
                android:textColor="@color/text_color"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                android:padding="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/evaluate_tag1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="站内环境整洁"
                        android:gravity="center"
                        android:background="@drawable/evaluate_tag_bg"/>
                    <TextView
                        android:id="@+id/evaluate_tag2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="人员服务热情"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/evaluate_tag_bg"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/evaluate_tag3"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="排队井然有序"
                        android:gravity="center"
                        android:background="@drawable/evaluate_tag_bg"/>
                    <TextView
                        android:layout_marginLeft="30dp"
                        android:id="@+id/evaluate_tag4"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="换电流程顺畅"
                        android:gravity="center"
                        android:background="@drawable/evaluate_tag_bg"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/finish"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_textcolor"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:text="提交"
            />
    </LinearLayout>
</LinearLayout>