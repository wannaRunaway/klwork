<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".refund.RefundDetailActivity">
        <include
            layout="@layout/layout_header_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_refund"
            android:layout_margin="10dp">
            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_rmb"
                    android:layout_marginLeft="24dp"/>
                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="#333333" />
            </LinearLayout>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e4e4e4"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/ll_top"/>
            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="12sp"
                android:text="申请退款理由"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/view"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:layout_margin="17.5dp"
                android:layout_below="@+id/tv_reason"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_refund"
            android:padding="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_failreason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#333333" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_retry"
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/shape_greenbtn"
            android:layout_gravity="center_horizontal"
            android:text="重新申请"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/shape_greenbtn"
            android:layout_gravity="center_horizontal"
            android:text="取消申请"
            android:visibility="gone"/>
    </LinearLayout>
</layout>
